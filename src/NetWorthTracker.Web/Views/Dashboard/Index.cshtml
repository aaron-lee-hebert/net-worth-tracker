@model NetWorthTracker.Core.ViewModels.DashboardViewModel
@using NetWorthTracker.Core.Enums
@using NetWorthTracker.Core.Extensions
@{
    ViewData["Title"] = "Dashboard";
    var assetCategories = AccountCategoryExtensions.GetAssetCategories().ToList();
    var liabilityCategories = AccountCategoryExtensions.GetLiabilityCategories().ToList();
}

@if (Model.ShowFirstAccountSuccess)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <h5 class="alert-heading"><i class="bi bi-check-circle-fill me-2"></i>Congratulations!</h5>
        <p class="mb-0">You've added your first account. Your net worth is now <strong>@Model.TotalNetWorth.ToString("C")</strong>. Keep adding accounts to get a complete picture of your finances.</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.IsFirstTimeUser)
{
    <!-- Onboarding Experience -->
    <div class="card card-featured mb-4">
        <div class="card-body text-center py-5">
            <h2>Welcome to Net Worth Tracker</h2>
            <p class="text-muted mb-4 text-narrow">
                Track your financial journey by adding your accounts. Start with your primary checking account,
                then add savings, investments, and any debts to see your complete financial picture.
            </p>

            <div class="row justify-content-center mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-bank fs-1 text-primary mb-2"></i>
                            <h6>Banking</h6>
                            <small class="text-muted">Checking & Savings</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-graph-up-arrow fs-1 text-info mb-2"></i>
                            <h6>Investments</h6>
                            <small class="text-muted">401(k), IRA, Brokerage</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-house fs-1 text-warning mb-2"></i>
                            <h6>Property</h6>
                            <small class="text-muted">Real Estate & Vehicles</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-credit-card fs-1 text-danger mb-2"></i>
                            <h6>Debts</h6>
                            <small class="text-muted">Mortgages, Loans, Cards</small>
                        </div>
                    </div>
                </div>
            </div>

            <a asp-controller="Accounts" asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Your First Account
            </a>

            <p class="text-muted small mt-4 mb-0">
                <i class="bi bi-shield-check me-1"></i>Your data stays on your server. No bank connections required.
            </p>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title mb-0" style="border-bottom: none;">Dashboard</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bulkUpdateModal">
                <i class="bi bi-pencil-square me-1"></i>Update Balances
            </button>
            <a asp-controller="Accounts" asp-action="Create" class="btn btn-primary">
                Add Account
            </a>
        </div>
    </div>
}

@if (!Model.IsFirstTimeUser)
{
<div class="row mb-4" id="summaryCards">
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="card h-100 card-border-accent">
            <div class="card-body">
                <h6 class="stat-label mb-2">Net Worth</h6>
                <h3 class="mb-0 net-worth-value" id="netWorthValue">@Model.TotalNetWorth.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="card h-100 card-border-success">
            <div class="card-body">
                <h6 class="stat-label mb-2">Total Assets</h6>
                <h3 class="mb-0 stat-value text-asset" id="totalAssetsValue">@Model.TotalAssets.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6 mb-3">
        <div class="card h-100 card-border-danger">
            <div class="card-body">
                <h6 class="stat-label mb-2">Total Liabilities</h6>
                <h3 class="mb-0 stat-value text-liability" id="totalLiabilitiesValue">@Model.TotalLiabilities.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

@if (Model.TotalsByCategory.Any())
{
    <div class="row mb-4" id="categoryCards">
        @foreach (var category in assetCategories.Where(c => Model.TotalsByCategory.ContainsKey(c)))
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                <a asp-controller="Accounts" asp-action="Index" asp-route-category="@category" class="text-decoration-none">
                    <div class="card h-100 category-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">@category.GetDisplayName()</h6>
                                    <h5 class="card-title mb-0">@Model.TotalsByCategory[category].ToString("C")</h5>
                                </div>
                                <i class="bi @GetCategoryIcon(category) fs-2 text-primary opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        @foreach (var category in liabilityCategories.Where(c => Model.TotalsByCategory.ContainsKey(c)))
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                <a asp-controller="Accounts" asp-action="Index" asp-route-category="@category" class="text-decoration-none">
                    <div class="card h-100 category-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">@category.GetDisplayName()</h6>
                                    <h5 class="card-title mb-0 text-danger">@Model.TotalsByCategory[category].ToString("C")</h5>
                                </div>
                                <i class="bi @GetCategoryIcon(category) fs-2 text-danger opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h5 class="mb-0">Net Worth History</h5>
                    <div class="btn-group" role="group" aria-label="View mode">
                        <button type="button" class="btn btn-outline-primary btn-sm view-mode-btn" data-mode="individual">Individual Accounts</button>
                        <button type="button" class="btn btn-outline-primary btn-sm view-mode-btn" data-mode="bytype">By Type</button>
                        <button type="button" class="btn btn-outline-primary btn-sm view-mode-btn active" data-mode="networth">Net Worth</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                    <div class="btn-group" role="group" aria-label="Date presets">
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn" data-preset="1m">1M</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn" data-preset="3m">3M</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn" data-preset="6m">6M</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn" data-preset="1y">1Y</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn" data-preset="ytd">YTD</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm date-preset-btn active" data-preset="all">All</button>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label for="startDate" class="form-label mb-0 small">From:</label>
                        <input type="date" id="startDate" class="form-control form-control-sm" style="width: auto;">
                        <label for="endDate" class="form-label mb-0 small">To:</label>
                        <input type="date" id="endDate" class="form-control form-control-sm" style="width: auto;">
                    </div>
                </div>
                <div id="chartLoading" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2">Loading chart data...</p>
                </div>
                <div id="noChartData" class="text-center py-5 d-none">
                    <i class="bi bi-bar-chart fs-1 text-muted"></i>
                    <p class="text-muted mt-2">No balance history data available for this period.</p>
                </div>
                <div id="chartContainer" class="d-none chart-responsive">
                    <canvas id="historyChart" aria-label="Net worth history chart" role="img"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Recent Accounts</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentAccounts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-card-mobile mb-0" id="recentAccountsTable">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Type</th>
                                    <th>Institution</th>
                                    <th class="text-end">Balance</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="recentAccountsTableBody">
                                @foreach (var account in Model.RecentAccounts)
                                {
                                    <tr>
                                        <td data-label="Account">@account.Name</td>
                                        <td data-label="Type">
                                            <span class="badge @GetAccountTypeBadgeClass(account.AccountType)">
                                                @account.AccountType.GetDisplayName()
                                            </span>
                                        </td>
                                        <td data-label="Institution">@(account.Institution ?? "-")</td>
                                        <td data-label="Balance" class="text-end @(account.AccountType.IsLiability() ? "text-danger" : "")">
                                            @account.CurrentBalance.ToString("C")
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="Accounts" asp-action="Details" asp-route-id="@account.Id" class="btn btn-sm btn-outline-primary" aria-label="View account details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted mb-3">No accounts yet. Add your first account to get started.</p>
                        <a asp-controller="Accounts" asp-action="Create" class="btn btn-primary">
                            Add Account
                        </a>
                    </div>
                }
            </div>
            @if (Model.RecentAccounts.Any())
            {
                <div class="card-footer text-center">
                    <a asp-controller="Accounts" asp-action="Index" class="text-decoration-none">
                        View all accounts <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Asset Allocation</h5>
            </div>
            <div class="card-body">
                @if (Model.TotalAssets > 0)
                {
                    @foreach (var category in assetCategories.Where(c => Model.TotalsByCategory.ContainsKey(c) && Model.TotalsByCategory[c] > 0))
                    {
                        var percentage = Model.TotalsByCategory[category] / Model.TotalAssets * 100;
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>@category.GetDisplayName()</span>
                                <span>@percentage.ToString("F1")%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar @GetCategoryProgressBarClass(category)" role="progressbar" style="width: @percentage.ToString("F1")%"></div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center mb-0">No assets to display</p>
                }
            </div>
        </div>
    </div>
</div>
} @* End of !Model.IsFirstTimeUser *@

<!-- Bulk Update Modal -->
<div class="modal fade" id="bulkUpdateModal" tabindex="-1" aria-labelledby="bulkUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bulkUpdateModalLabel">Update Account Balances</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="bulkUpdateDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="bulkUpdateDate">
                    </div>
                    <div class="col-md-6">
                        <label for="bulkUpdateNotes" class="form-label">Notes <span class="text-muted">(optional)</span></label>
                        <input type="text" class="form-control" id="bulkUpdateNotes" placeholder="e.g., Monthly update">
                    </div>
                </div>
                <hr>
                <div class="mb-2 d-flex justify-content-between align-items-center">
                    <small class="text-muted">Enter new balances for accounts you want to update</small>
                </div>

                <!-- Loading state -->
                <div id="bulkUpdateLoading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2 mb-0">Loading accounts...</p>
                </div>

                <!-- Error state -->
                <div id="bulkUpdateError" class="alert alert-danger d-none" role="alert"></div>

                <!-- Accounts list -->
                <div id="bulkUpdateAccountsList" class="d-none border rounded" style="max-height: 400px; overflow-y: auto;">
                    <!-- Account rows will be inserted here by JavaScript -->
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <span id="bulkUpdateSummary" class="text-muted">No changes</span>
                <div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="bulkUpdateSaveBtn" disabled>Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.AntiForgeryToken()

@functions {
    string GetAccountTypeBadgeClass(AccountType type)
    {
        var category = type.GetCategory();
        return category switch
        {
            AccountCategory.Banking => "bg-primary",
            AccountCategory.Investment => "bg-info",
            AccountCategory.RealEstate => "bg-warning text-dark",
            AccountCategory.VehiclesAndProperty => "bg-secondary",
            AccountCategory.Business => "bg-success",
            AccountCategory.SecuredDebt => "bg-danger",
            AccountCategory.UnsecuredDebt => "bg-danger",
            AccountCategory.OtherLiabilities => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetCategoryIcon(AccountCategory category)
    {
        return category switch
        {
            AccountCategory.Banking => "bi-bank",
            AccountCategory.Investment => "bi-bar-chart-line",
            AccountCategory.RealEstate => "bi-house",
            AccountCategory.VehiclesAndProperty => "bi-car-front",
            AccountCategory.Business => "bi-briefcase",
            AccountCategory.SecuredDebt => "bi-house-lock",
            AccountCategory.UnsecuredDebt => "bi-credit-card",
            AccountCategory.OtherLiabilities => "bi-file-earmark-text",
            _ => "bi-wallet"
        };
    }

    string GetCategoryProgressBarClass(AccountCategory category)
    {
        return category switch
        {
            AccountCategory.Banking => "bg-primary",
            AccountCategory.Investment => "bg-info",
            AccountCategory.RealEstate => "bg-warning",
            AccountCategory.VehiclesAndProperty => "bg-secondary",
            AccountCategory.Business => "bg-success",
            _ => "bg-primary"
        };
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="~/js/dashboard-chart.js" asp-append-version="true"></script>
    <script src="~/js/bulk-balance-update.js" asp-append-version="true"></script>
}
