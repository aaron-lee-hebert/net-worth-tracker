@model NetWorthTracker.Core.ViewModels.PagedResult<NetWorthTracker.Core.ViewModels.AdminSubscriptionViewModel>
@inject NetWorthTracker.Core.Services.IUserTimeZoneService TimeZone
@{
    ViewData["Title"] = "Subscriptions";
    var statusFilter = ViewBag.StatusFilter as NetWorthTracker.Core.Entities.SubscriptionStatus?;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active">Subscriptions</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0" style="border-bottom: none;">Subscriptions</h2>
    <span class="text-muted">@Model.TotalCount total subscriptions</span>
</div>

<!-- Status Filter Tabs -->
<ul class="nav nav-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @(statusFilter == null ? "active" : "")" asp-action="Subscriptions">
            All
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(statusFilter == NetWorthTracker.Core.Entities.SubscriptionStatus.Active ? "active" : "")"
           asp-action="Subscriptions" asp-route-status="@NetWorthTracker.Core.Entities.SubscriptionStatus.Active">
            <span class="badge bg-success me-1">Active</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(statusFilter == NetWorthTracker.Core.Entities.SubscriptionStatus.Trialing ? "active" : "")"
           asp-action="Subscriptions" asp-route-status="@NetWorthTracker.Core.Entities.SubscriptionStatus.Trialing">
            <span class="badge bg-info me-1">Trialing</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(statusFilter == NetWorthTracker.Core.Entities.SubscriptionStatus.PastDue ? "active" : "")"
           asp-action="Subscriptions" asp-route-status="@NetWorthTracker.Core.Entities.SubscriptionStatus.PastDue">
            <span class="badge bg-warning me-1">Past Due</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(statusFilter == NetWorthTracker.Core.Entities.SubscriptionStatus.Canceled ? "active" : "")"
           asp-action="Subscriptions" asp-route-status="@NetWorthTracker.Core.Entities.SubscriptionStatus.Canceled">
            <span class="badge bg-secondary me-1">Canceled</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(statusFilter == NetWorthTracker.Core.Entities.SubscriptionStatus.Expired ? "active" : "")"
           asp-action="Subscriptions" asp-route-status="@NetWorthTracker.Core.Entities.SubscriptionStatus.Expired">
            <span class="badge bg-danger me-1">Expired</span>
        </a>
    </li>
</ul>

<!-- Subscriptions Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Status</th>
                        <th>Started</th>
                        <th>Trial Period</th>
                        <th>Current Period</th>
                        <th>Stripe ID</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in Model.Items)
                    {
                        var badgeClass = sub.Status switch
                        {
                            NetWorthTracker.Core.Entities.SubscriptionStatus.Active => "bg-success",
                            NetWorthTracker.Core.Entities.SubscriptionStatus.Trialing => "bg-info",
                            NetWorthTracker.Core.Entities.SubscriptionStatus.PastDue => "bg-warning",
                            NetWorthTracker.Core.Entities.SubscriptionStatus.Canceled => "bg-secondary",
                            NetWorthTracker.Core.Entities.SubscriptionStatus.Expired => "bg-danger",
                            _ => "bg-secondary"
                        };
                        <tr>
                            <td>
                                <strong>@sub.UserDisplayName</strong><br>
                                <small class="text-muted">@sub.UserEmail</small>
                            </td>
                            <td>
                                <span class="badge @badgeClass fs-6">@sub.Status</span>
                            </td>
                            <td>@TimeZone.ToUserTime(sub.CreatedAt).ToString("MMM d, yyyy")</td>
                            <td>
                                @if (sub.TrialStartedAt.HasValue)
                                {
                                    <small>
                                        @TimeZone.ToUserTime(sub.TrialStartedAt.Value).ToString("MMM d") - @(sub.TrialEndsAt.HasValue ? TimeZone.ToUserTime(sub.TrialEndsAt.Value).ToString("MMM d, yyyy") : "-")
                                        @if (sub.Status == NetWorthTracker.Core.Entities.SubscriptionStatus.Trialing && sub.TrialEndsAt.HasValue)
                                        {
                                            var daysLeft = (sub.TrialEndsAt.Value - DateTime.UtcNow).Days;
                                            if (daysLeft > 0)
                                            {
                                                <br><span class="badge bg-info">@daysLeft days left</span>
                                            }
                                            else
                                            {
                                                <br><span class="badge bg-warning">Ending soon</span>
                                            }
                                        }
                                    </small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (sub.CurrentPeriodEnd.HasValue)
                                {
                                    <small>
                                        Ends @TimeZone.ToUserTime(sub.CurrentPeriodEnd.Value).ToString("MMM d, yyyy")
                                    </small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(sub.StripeSubscriptionId))
                                {
                                    <code class="small">@sub.StripeSubscriptionId</code>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="UserDetails" asp-route-id="@sub.UserId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-person me-1"></i>View User
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.Items.Count == 0)
{
    <div class="text-center text-muted py-5">
        <i class="bi bi-credit-card-2-front display-4"></i>
        <p class="mt-3">No subscriptions found with the selected status.</p>
    </div>
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4" aria-label="Subscription list pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Subscriptions" asp-route-page="@(Model.Page - 1)" asp-route-status="@statusFilter">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-action="Subscriptions" asp-route-page="@i" asp-route-status="@statusFilter">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Subscriptions" asp-route-page="@(Model.Page + 1)" asp-route-status="@statusFilter">Next</a>
            </li>
        </ul>
    </nav>
}
