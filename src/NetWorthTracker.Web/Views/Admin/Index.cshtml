@model NetWorthTracker.Core.ViewModels.AdminDashboardViewModel
@inject NetWorthTracker.Core.Services.IUserTimeZoneService TimeZone
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0" style="border-bottom: none;">Admin Dashboard</h2>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100" style="border-left: 4px solid var(--color-primary);">
            <div class="card-body">
                <h6 class="text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.1em;">Total Users</h6>
                <h2 class="mb-0" style="font-family: var(--font-serif); color: var(--color-primary);">@Model.TotalUsers</h2>
                <small class="text-muted">
                    <span class="text-success">+@Model.NewUsersThisMonth</span> this month
                </small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100" style="border-left: 4px solid var(--color-success);">
            <div class="card-body">
                <h6 class="text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.1em;">Active Subscriptions</h6>
                <h2 class="mb-0" style="font-family: var(--font-serif); color: var(--color-success);">@Model.ActiveSubscriptions</h2>
                <small class="text-muted">Paid users</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100" style="border-left: 4px solid var(--color-info);">
            <div class="card-body">
                <h6 class="text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.1em;">Trial Users</h6>
                <h2 class="mb-0" style="font-family: var(--font-serif); color: var(--color-info);">@Model.TrialUsers</h2>
                <small class="text-muted">In trial period</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100" style="border-left: 4px solid var(--color-danger);">
            <div class="card-body">
                <h6 class="text-muted text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.1em;">Churn Rate</h6>
                <h2 class="mb-0" style="font-family: var(--font-serif); color: var(--color-danger);">@Model.MonthlyChurnRate%</h2>
                <small class="text-muted">@Model.ExpiredSubscriptions expired + @Model.CanceledSubscriptions canceled</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Signup Trend Chart -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Signup Trend (Last 12 Months)</h5>
            </div>
            <div class="card-body">
                <canvas id="signupChart" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Admin Tools</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Users" class="btn btn-outline-primary">
                        <i class="bi bi-people me-2"></i>Manage Users
                    </a>
                    <a asp-action="AuditLogs" class="btn btn-outline-primary">
                        <i class="bi bi-journal-text me-2"></i>View Audit Logs
                    </a>
                    <a asp-action="Subscriptions" class="btn btn-outline-primary">
                        <i class="bi bi-credit-card me-2"></i>View Subscriptions
                    </a>
                    <a asp-action="Analytics" class="btn btn-outline-primary">
                        <i class="bi bi-graph-up me-2"></i>Subscription Analytics
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Signups -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recent Signups</h5>
        <a asp-action="Users" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Joined</th>
                        <th>Status</th>
                        <th>Admin</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.RecentSignups)
                    {
                        <tr>
                            <td>
                                <strong>@user.DisplayName</strong><br>
                                <small class="text-muted">@user.Email</small>
                            </td>
                            <td>@TimeZone.ToUserTime(user.CreatedAt).ToString("MMM d, yyyy")</td>
                            <td>
                                @if (user.SubscriptionStatus.HasValue)
                                {
                                    var badgeClass = user.SubscriptionStatus.Value switch
                                    {
                                        NetWorthTracker.Core.Entities.SubscriptionStatus.Active => "bg-success",
                                        NetWorthTracker.Core.Entities.SubscriptionStatus.Trialing => "bg-info",
                                        NetWorthTracker.Core.Entities.SubscriptionStatus.PastDue => "bg-warning",
                                        NetWorthTracker.Core.Entities.SubscriptionStatus.Canceled => "bg-secondary",
                                        NetWorthTracker.Core.Entities.SubscriptionStatus.Expired => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    <span class="badge @badgeClass">@user.SubscriptionStatus.Value</span>
                                    @if (user.IsInTrial == true)
                                    {
                                        <small class="text-muted ms-1">(@user.TrialDaysRemaining days left)</small>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No subscription</span>
                                }
                            </td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-primary"><i class="bi bi-shield-check"></i> Admin</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        const signupData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SignupTrend));

        const ctx = document.getElementById('signupChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: signupData.map(d => d.month),
                datasets: [{
                    label: 'New Signups',
                    data: signupData.map(d => d.count),
                    borderColor: '#1a3c34',
                    backgroundColor: 'rgba(26, 60, 52, 0.1)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
}
