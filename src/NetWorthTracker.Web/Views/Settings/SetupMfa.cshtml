@{
    ViewData["Title"] = "Multi-Factor Authentication";
    var isMfaEnabled = (bool)ViewBag.IsMfaEnabled;
    var sharedKey = ViewBag.SharedKey as string;
    var authenticatorUri = ViewBag.AuthenticatorUri as string;
}

<div class="row justify-content-center">
    <div class="col-lg-8">

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Settings</a></li>
        <li class="breadcrumb-item active" aria-current="page">MFA</li>
    </ol>
</nav>

<h2 class="page-title mb-4">Multi-Factor Authentication</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (isMfaEnabled)
{
    <div class="card">
        <div class="card-header bg-success bg-opacity-10">
            <h5 class="mb-0 text-success">MFA is Enabled</h5>
        </div>
        <div class="card-body">
            <p>Your account is protected with multi-factor authentication. You will be required to enter a code from your authenticator app when signing in.</p>

            <div class="d-flex gap-2 flex-wrap">
                <form asp-action="GenerateNewRecoveryCodes" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-primary">Generate New Recovery Codes</button>
                </form>

                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#disableMfaModal">Disable MFA</button>
            </div>
        </div>
    </div>

    <!-- Disable MFA Modal -->
    <div class="modal fade" id="disableMfaModal" tabindex="-1" aria-labelledby="disableMfaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="disableMfaModalLabel">Disable Multi-Factor Authentication</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> Disabling MFA will make your account less secure.
                    </div>
                    <p>Are you sure you want to disable multi-factor authentication? Your account will only be protected by your password.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="DisableMfa" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Disable MFA</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Set Up Multi-Factor Authentication</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                Multi-factor authentication adds an extra layer of security to your account by requiring a code from an authenticator app in addition to your password.
            </div>

            <h6 class="mt-4">Step 1: Install an Authenticator App</h6>
            <p class="text-muted">
                If you don't already have one, download an authenticator app on your phone:
            </p>
            <ul class="text-muted">
                <li>Google Authenticator (iOS / Android)</li>
                <li>Microsoft Authenticator (iOS / Android)</li>
                <li>Authy (iOS / Android / Desktop)</li>
                <li>1Password, Bitwarden, or other password managers</li>
            </ul>

            <hr class="my-4">

            <h6>Step 2: Scan QR Code or Enter Key Manually</h6>
            <p class="text-muted">
                Open your authenticator app and scan the QR code below, or manually enter the setup key.
            </p>

            <div class="row mt-4">
                <div class="col-md-6 text-center mb-4">
                    <div class="border rounded p-3 bg-white d-inline-block">
                        <div id="qrcode"></div>
                    </div>
                    <p class="text-muted small mt-2">Scan this QR code with your authenticator app</p>
                </div>
                <div class="col-md-6">
                    <p class="text-muted small mb-2">Or enter this key manually:</p>
                    <div class="input-group">
                        <input type="text" class="form-control font-monospace" value="@sharedKey" readonly id="mfaKey">
                        <button class="btn btn-outline-secondary" type="button" onclick="copyKey()">Copy</button>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h6>Step 3: Verify Setup</h6>
            <p class="text-muted">
                Enter the 6-digit code from your authenticator app to verify the setup.
            </p>

            <form asp-action="EnableMfa" method="post" class="mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Verification Code</label>
                            <input type="text" name="code" class="form-control form-control-lg text-center font-monospace"
                                   maxlength="6" pattern="[0-9]{6}" placeholder="000000"
                                   autocomplete="off" inputmode="numeric" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Enable MFA</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Settings</a>
</div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/qrcode-generator@1.4.4/qrcode.min.js"></script>
    <script>
        @if (!isMfaEnabled && !string.IsNullOrEmpty(authenticatorUri))
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                var qr = qrcode(0, 'M');
                qr.addData('@Html.Raw(authenticatorUri)');
                qr.make();
                document.getElementById('qrcode').innerHTML = qr.createSvgTag(5);
            });
            </text>
        }

        function copyKey() {
            var keyInput = document.getElementById('mfaKey');
            keyInput.select();
            document.execCommand('copy');

            var btn = event.currentTarget;
            var originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i>';
            setTimeout(function() {
                btn.innerHTML = originalHtml;
            }, 2000);
        }
    </script>
}
