@model NetWorthTracker.Core.Entities.ApplicationUser
@{
    ViewData["Title"] = "Settings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="page-title mb-1" style="border-bottom: none;">Settings</h2>
        <p class="text-muted mb-0">Manage your account preferences</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Profile Section -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Profile</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProfile" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="@Model.Email" disabled />
                        <small class="text-muted">Email cannot be changed</small>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">First Name</label>
                            <input type="text" name="firstName" class="form-control" value="@Model.FirstName" placeholder="Enter your first name" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Last Name</label>
                            <input type="text" name="lastName" class="form-control" value="@Model.LastName" placeholder="Enter your last name" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Region</label>
                        <select name="locale" class="form-select" asp-items="@(ViewBag.SupportedLocales as IEnumerable<SelectListItem>)"></select>
                        <small class="text-muted">
                            Determines date, number, and currency formatting.
                        </small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Time Zone</label>
                        <select name="timeZone" class="form-select" asp-items="@(ViewBag.SupportedTimeZones as IEnumerable<SelectListItem>)"></select>
                        <small class="text-muted">
                            Used for displaying timestamps in your local time.
                        </small>
                    </div>
                    <small class="text-muted d-block mb-3">
                        Your name will be displayed in the navigation bar.
                    </small>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Password Section -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Change Password</h5>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <div class="mb-3">
                        <label class="form-label">Current Password</label>
                        <input type="password" name="currentPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="newPassword" class="form-control" minlength="8" required />
                        <small class="text-muted">Must be at least 8 characters</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" name="confirmPassword" class="form-control" minlength="8" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@{
    var alertConfig = ViewBag.AlertConfig as NetWorthTracker.Core.Entities.AlertConfiguration;
    var emailConfigured = ViewBag.EmailConfigured as bool? ?? false;
}

<!-- Notifications Section -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Notifications</h5>
            </div>
            <div class="card-body">
                @if (!emailConfigured)
                {
                    <div class="alert alert-info">
                        <small>Email notifications are not available because SMTP is not configured for this instance.</small>
                    </div>
                }
                else if (alertConfig != null)
                {
                    <form asp-action="UpdateAlertSettings" method="post">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="alertsEnabled" name="alertsEnabled" value="true" @(alertConfig.AlertsEnabled ? "checked" : "") />
                                <label class="form-check-label" for="alertsEnabled">Enable notifications</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Net worth change alert</label>
                            <div class="input-group">
                                <input type="number" name="netWorthChangeThreshold" class="form-control" value="@alertConfig.NetWorthChangeThreshold" min="0" max="100" step="1" />
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="text-muted">Alert when net worth changes by this percentage. Set to 0 to disable.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cash runway alert</label>
                            <div class="input-group">
                                <input type="number" name="cashRunwayMonths" class="form-control" value="@alertConfig.CashRunwayMonths" min="0" max="24" step="1" />
                                <span class="input-group-text">months</span>
                            </div>
                            <small class="text-muted">Alert when cash runway falls below this many months. Set to 0 to disable.</small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="monthlySnapshotEnabled" name="monthlySnapshotEnabled" value="true" @(alertConfig.MonthlySnapshotEnabled ? "checked" : "") />
                                <label class="form-check-label" for="monthlySnapshotEnabled">Monthly snapshot email</label>
                            </div>
                            <small class="text-muted">Receive a monthly summary of your financial progress.</small>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Notification Settings</button>
                    </form>
                }
            </div>
        </div>
    </div>

    <!-- MFA Section -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Multi-Factor Authentication</h5>
            </div>
            <div class="card-body">
                @if (Model.TwoFactorEnabled)
                {
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-success me-2">Enabled</span>
                        <span class="text-muted">Your account is protected with MFA</span>
                    </div>
                    <p class="text-muted small">
                        Multi-factor authentication adds an extra layer of security by requiring a code from your authenticator app when signing in.
                    </p>
                    <a asp-action="SetupMfa" class="btn btn-outline-primary">Manage MFA</a>
                }
                else
                {
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-warning text-dark me-2">Not Enabled</span>
                        <span class="text-muted">Your account is not protected with MFA</span>
                    </div>
                    <p class="text-muted small">
                        Multi-factor authentication adds an extra layer of security by requiring a code from your authenticator app when signing in.
                    </p>
                    <a asp-action="SetupMfa" class="btn btn-primary">Enable MFA</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card border-warning">
            <div class="card-header bg-warning bg-opacity-10">
                <h5 class="mb-0">Data Management</h5>
            </div>
            <div class="card-body">
                <p>Delete all your financial data (accounts and balance history). This action cannot be undone.</p>
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#deleteDataModal">Delete All Data</button>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card border-danger">
            <div class="card-header bg-danger bg-opacity-10">
                <h5 class="mb-0">Delete Account</h5>
            </div>
            <div class="card-body">
                <p>Permanently delete your account and all associated data. This action cannot be undone.</p>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Delete Account</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Data Modal -->
<div class="modal fade" id="deleteDataModal" tabindex="-1" aria-labelledby="deleteDataModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDataModalLabel">Delete All Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This will permanently delete all your accounts and balance history.
                </div>
                <p>Are you sure you want to delete all your financial data? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteAllData" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning">Delete All Data</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">Delete Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <strong>Danger:</strong> This will permanently delete your account and all data.
                </div>
                <p>Are you sure you want to delete your account? This will:</p>
                <ul>
                    <li>Delete all your accounts and balance history</li>
                    <li>Remove your user account permanently</li>
                </ul>
                <p><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteAccount" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete My Account</button>
                </form>
            </div>
        </div>
    </div>
</div>
