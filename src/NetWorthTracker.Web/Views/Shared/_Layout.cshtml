@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Options
@using NetWorthTracker.Core.Entities
@using NetWorthTracker.Core.Enums
@using NetWorthTracker.Infrastructure.Services
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IOptions<AppSettings> AppSettingsOptions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Net Worth Tracker</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <a href="#main-content" class="skip-to-content">Skip to main content</a>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Net Worth Tracker
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Accounts" ? "active" : "")" asp-controller="Accounts" asp-action="Index">
                                    <i class="bi bi-bank me-1"></i>Accounts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Quarterly">
                                    <i class="bi bi-file-earmark-spreadsheet me-1"></i>Reports
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Forecasts" ? "active" : "")" asp-controller="Forecasts" asp-action="Index">
                                    <i class="bi bi-graph-up-arrow me-1"></i>Forecasts
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName = currentUser?.DisplayName ?? UserManager.GetUserName(User);
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@displayName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Index">
                                            <i class="bi bi-gear me-2"></i>Settings
                                        </a>
                                    </li>
                                    @if (AppSettingsOptions.Value.AppMode == AppMode.Saas)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Billing" asp-action="Index">
                                                <i class="bi bi-credit-card me-2"></i>Billing
                                            </a>
                                        </li>
                                    }
                                    @if (User.HasClaim("IsAdmin", "true"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-shield-lock me-2"></i>Admin
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-wrapper">
        <div class="container mt-4">
            <main role="main" id="main-content" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year Net Worth Tracker
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none me-3">Privacy Policy</a>
                    <a asp-controller="Home" asp-action="Terms" class="text-muted text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        window.userLocale = '@(Context.Items["UserLocale"] ?? "en-US")';
        window.userCurrency = '@(Context.Items["UserCurrency"] ?? "USD")';
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
