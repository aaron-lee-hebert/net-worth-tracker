@{
    ViewData["Title"] = "Pricing";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Hero Section -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold">Simple, Transparent Pricing</h1>
            <p class="lead text-muted">
                Track your net worth with confidence. No hidden fees, no surprises.
            </p>
        </div>

        <!-- Pricing Card -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-6">
                <div class="card border-primary shadow-sm">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h3 class="mb-0">Net Worth Tracker</h3>
                    </div>
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <span class="display-4 fw-bold">$30</span>
                            <span class="text-muted">/year</span>
                        </div>
                        <p class="text-muted mb-4">That's just $2.50/month</p>

                        <div class="alert alert-success mb-4">
                            <i class="bi bi-gift me-2"></i>
                            <strong>14-day free trial</strong> — No credit card required
                        </div>

                        <ul class="list-unstyled text-start mb-4">
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Unlimited accounts (assets & liabilities)
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Historical balance tracking
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Net worth forecasting (1-30 years)
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Monthly snapshot emails
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Customizable alerts
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                CSV exports
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Two-factor authentication
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                Daily backups included
                            </li>
                        </ul>

                        <div class="d-grid gap-2">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                                Start Free Trial
                            </a>
                            <small class="text-muted">No credit card required</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- What's Included Section -->
        <div class="mb-5">
            <h2 class="text-center mb-4">What You Get</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                            <h5>Privacy First</h5>
                            <p class="text-muted mb-0">
                                No bank connections. You manually enter data, keeping your credentials safe.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-graph-up display-4 text-primary mb-3"></i>
                            <h5>Clear Insights</h5>
                            <p class="text-muted mb-0">
                                See your net worth trend over time with intuitive charts and reports.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="bi bi-cloud-check display-4 text-primary mb-3"></i>
                            <h5>Fully Managed</h5>
                            <p class="text-muted mb-0">
                                We handle hosting, backups, and updates. You just track your wealth.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Screenshots Section -->
        <div class="mb-5">
            <h2 class="text-center mb-4">See It In Action</h2>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <img src="~/images/screenshots/dashboard.png" class="card-img-top" alt="Dashboard showing net worth overview" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px; display: none;">
                            <div class="text-center text-muted">
                                <i class="bi bi-speedometer2 display-4"></i>
                                <p class="mt-2 mb-0">Dashboard Screenshot</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Dashboard</h5>
                            <p class="card-text text-muted">
                                Get a complete overview of your net worth at a glance. See your assets, liabilities, and track changes over time.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <img src="~/images/screenshots/forecasts.png" class="card-img-top" alt="Forecast showing projected net worth" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px; display: none;">
                            <div class="text-center text-muted">
                                <i class="bi bi-graph-up-arrow display-4"></i>
                                <p class="mt-2 mb-0">Forecast Screenshot</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Forecasting</h5>
                            <p class="card-text text-muted">
                                Project your net worth 1-30 years into the future with customizable growth assumptions for each asset type.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <img src="~/images/screenshots/accounts.png" class="card-img-top" alt="Accounts list" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px; display: none;">
                            <div class="text-center text-muted">
                                <i class="bi bi-bank display-4"></i>
                                <p class="mt-2 mb-0">Accounts Screenshot</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Account Management</h5>
                            <p class="card-text text-muted">
                                Organize all your accounts by type — banking, investments, real estate, vehicles, and liabilities.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <img src="~/images/screenshots/reports.png" class="card-img-top" alt="Quarterly reports" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px; display: none;">
                            <div class="text-center text-muted">
                                <i class="bi bi-file-earmark-spreadsheet display-4"></i>
                                <p class="mt-2 mb-0">Reports Screenshot</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Quarterly Reports</h5>
                            <p class="card-text text-muted">
                                Review your financial progress quarter by quarter. Export to CSV for your records or tax preparation.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="mb-5">
            <h2 class="text-center mb-4">Frequently Asked Questions</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            Do you connect to my bank accounts?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <strong>No.</strong> Net Worth Tracker is a manual tracking tool. You enter your account balances yourself,
                            which means you never share your bank credentials with us. This is intentional — we believe in privacy-first
                            financial tracking.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What happens after my trial ends?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Your account switches to <strong>read-only mode</strong>. You can still view and export all your data,
                            but you won't be able to add new entries until you subscribe. We never delete your data due to non-payment.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Can I cancel anytime?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Yes! You can cancel your subscription at any time from your Settings page. You'll retain access until
                            the end of your billing period, then your account moves to read-only mode.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            Is my data secure?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Yes. All data is encrypted at rest and in transit. We use industry-standard security practices including
                            HTTPS, secure password hashing, two-factor authentication, and daily backups. See our
                            <a asp-action="Privacy">Privacy Policy</a> for details.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Is there a self-hosted option?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Yes! Net Worth Tracker is open source under the MIT License. You can run it on your own server for free.
                            Check out our <a href="https://github.com/aaron-lee-hebert/net-worth-tracker" target="_blank" rel="noopener">GitHub repository</a>
                            for instructions.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Final CTA -->
        <div class="text-center py-5 bg-light rounded mb-4">
            <h2 class="mb-3">Ready to track your net worth?</h2>
            <p class="text-muted mb-4">Start your 14-day free trial today. No credit card required.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5">
                Get Started Free
            </a>
        </div>
    </div>
</div>
