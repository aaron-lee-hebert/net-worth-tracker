@model NetWorthTracker.Core.ViewModels.LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recovery Code Sign In";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-key fs-1 text-warning"></i>
                    <h3 class="mt-2">Recovery Code</h3>
                    <p class="text-muted">Enter one of your recovery codes to sign in</p>
                </div>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Note:</strong> Each recovery code can only be used once. After signing in, consider generating new recovery codes.
                </div>

                <form asp-action="LoginWithRecoveryCode" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="RecoveryCode" class="form-label">Recovery Code</label>
                        <input asp-for="RecoveryCode" class="form-control form-control-lg text-center font-monospace"
                               autocomplete="off" placeholder="XXXXX-XXXXX" autofocus />
                        <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="bi bi-unlock me-1"></i>Sign In
                    </button>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <a asp-action="LoginWith2fa" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Use Authenticator Code
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
