@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">Password Reset Complete</h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-success" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </div>
                <h5 class="text-success">Password Reset Successful</h5>
                <p class="text-muted">
                    Your password has been reset successfully. You can now log in with your new password.
                </p>
                <hr />
                <p class="mb-0">
                    <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>
