@model NetWorthTracker.Core.ViewModels.EmailVerificationViewModel
@{
    ViewData["Title"] = "Email Verification";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">Email Verification</h4>
            </div>
            <div class="card-body text-center">
                @if (Model.Success)
                {
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-success" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    </div>
                    <h5 class="text-success">Email Verified</h5>
                }
                else
                {
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-danger" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                        </svg>
                    </div>
                    <h5 class="text-danger">Verification Failed</h5>
                }
                <p class="text-muted">@Model.Message</p>
                <hr />
                <p class="mb-0">
                    <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>
