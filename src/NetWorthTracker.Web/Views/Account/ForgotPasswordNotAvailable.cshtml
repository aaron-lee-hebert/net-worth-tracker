@{
    ViewData["Title"] = "Password Reset Unavailable";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">Password Reset Unavailable</h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-warning" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                </div>
                <h5>Email Not Configured</h5>
                <p class="text-muted">
                    Password reset via email is not available because email has not been configured for this instance.
                </p>
                <p class="text-muted">
                    Please contact your system administrator to reset your password using the command line:
                </p>
                <code class="d-block bg-light p-2 rounded small mb-3">
                    dotnet NetWorthTracker.Web.dll --reset-password your@email.com NewPassword123
                </code>
                <hr />
                <p class="mb-0">
                    <a asp-action="Login" class="link-primary">Return to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>
