@model NetWorthTracker.Core.ViewModels.AccountViewModel
@using NetWorthTracker.Core.Enums
@using NetWorthTracker.Core.Extensions
@{
    ViewData["Title"] = Model.Name;
    var balanceHistory = ViewBag.BalanceHistory as IList<NetWorthTracker.Core.ViewModels.BalanceHistoryViewModel>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Accounts</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex gap-2">
        @if (balanceHistory?.Any() == true)
        {
            <a asp-action="ExportAccountHistoryCsv" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i> Export
            </a>
        }
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Account Details</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Name</dt>
                    <dd class="col-sm-7">@Model.Name</dd>

                    <dt class="col-sm-5">Type</dt>
                    <dd class="col-sm-7">
                        <span class="badge @GetAccountTypeBadgeClass(Model.AccountType)">
                            @Model.AccountType.GetDisplayName()
                        </span>
                    </dd>

                    <dt class="col-sm-5">Category</dt>
                    <dd class="col-sm-7">@Model.AccountType.GetCategory().GetDisplayName()</dd>

                    <dt class="col-sm-5">Balance</dt>
                    <dd class="col-sm-7">
                        <strong class="@(Model.AccountType.IsLiability() ? "text-danger" : "text-success")">
                            @Model.CurrentBalance.ToString("C")
                        </strong>
                    </dd>

                    <dt class="col-sm-5">Institution</dt>
                    <dd class="col-sm-7">@(Model.Institution ?? "-")</dd>

                    <dt class="col-sm-5">Account #</dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrEmpty(Model.AccountNumber))
                        {
                            <text>****@Model.AccountNumber[^4..]</text>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </dd>

                    <dt class="col-sm-5">Status</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-5">Description</dt>
                        <dd class="col-sm-7">@Model.Description</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">Update Balance</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateBalance" method="post">
                    <input type="hidden" name="accountId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">New Balance</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" name="newBalance" class="form-control" step="0.01" value="@Model.CurrentBalance" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="recordedAt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <small class="text-muted">Leave as today or select a past date for historical entries.</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (optional)</label>
                        <input type="text" name="notes" class="form-control" placeholder="Reason for update" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Update Balance</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Balance History</h5>
            </div>
            <div class="card-body">
                @if (balanceHistory?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th class="text-end">Balance</th>
                                    <th class="text-end">% Change</th>
                                    <th>Notes</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < balanceHistory.Count; i++)
                                {
                                    var history = balanceHistory[i];
                                    var previousBalance = i < balanceHistory.Count - 1 ? balanceHistory[i + 1].Balance : (decimal?)null;
                                    var percentChange = previousBalance.HasValue && previousBalance.Value != 0
                                        ? ((history.Balance - previousBalance.Value) / Math.Abs(previousBalance.Value)) * 100
                                        : (decimal?)null;

                                    <tr>
                                        <td>@history.RecordedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end @(Model.AccountType.IsLiability() ? "text-danger" : "")">
                                            @history.Balance.ToString("C")
                                        </td>
                                        <td class="text-end">
                                            @if (percentChange.HasValue)
                                            {
                                                var isIncrease = percentChange.Value > 0;
                                                var isDecrease = percentChange.Value < 0;
                                                var isLiability = Model.AccountType.IsLiability();
                                                // For assets: increase = good (green), decrease = bad (red)
                                                // For liabilities: increase = bad (red), decrease = good (green)
                                                var isGood = isLiability ? isDecrease : isIncrease;
                                                var isBad = isLiability ? isIncrease : isDecrease;
                                                var colorClass = isGood ? "text-success" : (isBad ? "text-danger" : "");
                                                var icon = isIncrease ? "bi-arrow-up" : (isDecrease ? "bi-arrow-down" : "");
                                                <span class="@colorClass">
                                                    @if (!string.IsNullOrEmpty(icon))
                                                    {
                                                        <i class="bi @icon"></i>
                                                    }
                                                    @percentChange.Value.ToString("+0.00;-0.00;0.00")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@(history.Notes ?? "-")</td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-primary me-1"
                                                    onclick="openEditModal('@history.Id')" title="Edit" aria-label="Edit balance entry">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="openDeleteModal('@history.Id', '@history.RecordedAt.ToString("MMM dd, yyyy")', '@history.Balance.ToString("C")')"
                                                    title="Delete" aria-label="Delete balance entry">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center mb-0">No balance history recorded yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Edit Balance History Modal -->
<div class="modal fade" id="editBalanceModal" tabindex="-1" aria-labelledby="editBalanceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBalanceModalLabel">Edit Balance History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="EditBalanceHistory" method="post">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />
                    <input type="hidden" name="AccountId" id="editAccountId" />
                    <div class="mb-3">
                        <label class="form-label">Balance</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" name="Balance" id="editBalance" class="form-control" step="0.01" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="RecordedAt" id="editRecordedAt" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (optional)</label>
                        <input type="text" name="Notes" id="editNotes" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Balance History Modal -->
<div class="modal fade" id="deleteBalanceModal" tabindex="-1" aria-labelledby="deleteBalanceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteBalanceModalLabel">Delete Balance History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this balance history entry?</p>
                <p class="mb-0">
                    <strong>Date:</strong> <span id="deleteDate"></span><br />
                    <strong>Balance:</strong> <span id="deleteBalance"></span>
                </p>
                <div class="alert alert-warning mt-3 mb-0">
                    If this is the most recent entry, the account's current balance will be updated to the next most recent entry.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteBalanceHistory" method="post" class="d-inline">
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function openEditModal(historyId) {
            try {
                const response = await fetch(`/Accounts/GetBalanceHistory/${historyId}`);
                if (!response.ok) {
                    throw new Error('Failed to fetch balance history');
                }
                const data = await response.json();

                document.getElementById('editId').value = data.id;
                document.getElementById('editAccountId').value = data.accountId;
                document.getElementById('editBalance').value = data.balance;
                document.getElementById('editNotes').value = data.notes || '';

                // Format date for date input
                const date = new Date(data.recordedAt);
                const localDate = new Date(date.getTime() - date.getTimezoneOffset() * 60000);
                document.getElementById('editRecordedAt').value = localDate.toISOString().slice(0, 10);

                const modal = new bootstrap.Modal(document.getElementById('editBalanceModal'));
                modal.show();
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to load balance history data.');
            }
        }

        function openDeleteModal(historyId, date, balance) {
            document.getElementById('deleteId').value = historyId;
            document.getElementById('deleteDate').textContent = date;
            document.getElementById('deleteBalance').textContent = balance;

            const modal = new bootstrap.Modal(document.getElementById('deleteBalanceModal'));
            modal.show();
        }
    </script>
}

@functions {
    string GetAccountTypeBadgeClass(AccountType type)
    {
        var category = type.GetCategory();
        return category switch
        {
            AccountCategory.Banking => "bg-primary",
            AccountCategory.Investment => "bg-info",
            AccountCategory.RealEstate => "bg-warning text-dark",
            AccountCategory.VehiclesAndProperty => "bg-secondary",
            AccountCategory.Business => "bg-success",
            AccountCategory.SecuredDebt => "bg-danger",
            AccountCategory.UnsecuredDebt => "bg-danger",
            AccountCategory.OtherLiabilities => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
