@model NetWorthTracker.Core.ViewModels.AccountCreateViewModel
@using NetWorthTracker.Core.Enums
@using NetWorthTracker.Core.Extensions
@{
    ViewData["Title"] = "Add Account";
    var assetCategories = AccountCategoryExtensions.GetAssetCategories().ToList();
    var liabilityCategories = AccountCategoryExtensions.GetLiabilityCategories().ToList();
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">Add Account</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Account Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Chase Checking" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AccountType" class="form-label">Account Type</label>
                        <select asp-for="AccountType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <optgroup label="--- Assets ---">
                            @foreach (var category in assetCategories)
                            {
                                <optgroup label="@category.GetDisplayName()">
                                    @foreach (var type in AccountTypeExtensions.GetTypesByCategory(category))
                                    {
                                        <option value="@((int)type)">@type.GetDisplayName()</option>
                                    }
                                </optgroup>
                            }
                            </optgroup>
                            <optgroup label="--- Liabilities ---">
                            @foreach (var category in liabilityCategories)
                            {
                                <optgroup label="@category.GetDisplayName()">
                                    @foreach (var type in AccountTypeExtensions.GetTypesByCategory(category))
                                    {
                                        <option value="@((int)type)">@type.GetDisplayName()</option>
                                    }
                                </optgroup>
                            }
                            </optgroup>
                        </select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CurrentBalance" class="form-label">Current Balance</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="CurrentBalance" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="CurrentBalance" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Institution" class="form-label">Institution</label>
                        <input asp-for="Institution" class="form-control" placeholder="e.g., Chase Bank" />
                        <span asp-validation-for="Institution" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AccountNumber" class="form-label">Account Number (optional)</label>
                        <input asp-for="AccountNumber" class="form-control" placeholder="Last 4 digits only recommended" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Any notes about this account"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
