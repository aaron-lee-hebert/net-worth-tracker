{
  "DatabaseProvider": "SQLite",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/networth.db"
  },
  "SeedDemoData": false,
  "RunMigrationsOnStartup": false,
  "MigrationSettings": {
    "MigrationsPath": "./migrations",
    "AllowRollback": true,
    "TransactionPerMigration": true
  },
  "Smtp": {
    "Enabled": false,
    "Host": "",
    "Port": 587,
    "UseSsl": true,
    "Username": "",
    "Password": "",
    "FromEmail": "",
    "FromName": "Net Worth Tracker"
  },
  "AuditLogging": {
    "Enabled": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "NHibernate": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/networth-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ErrorAlerts": {
    "Enabled": false,
    "RecipientEmail": "",
    "MaxAlertsPerHour": 10
  },
  "DataRetention": {
    "GracePeriodDays": 30,
    "CleanupHour": 3,
    "Enabled": true
  },
  "App": {
    "AppMode": "SelfHosted"
  },
  "Stripe": {
    "SecretKey": "",
    "WebhookSecret": "",
    "PriceId": ""
  },
  "SendGrid": {
    "ApiKey": "",
    "FromEmail": "",
    "FromName": "Net Worth Tracker"
  },
  "AllowedHosts": "*"
}
